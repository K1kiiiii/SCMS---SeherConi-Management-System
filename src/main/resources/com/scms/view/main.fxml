<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.scms.controller.MainController"
            prefWidth="1100" prefHeight="700" styleClass="border-pane"
            style="-fx-background-color: #F5F3EF;">

    <top>
        <!-- Use a StackPane so we can overlay a perfectly centered title while keeping a left-aligned HBox for logo and right-aligned user controls -->
        <StackPane>
            <children>
                <HBox spacing="10" alignment="CENTER_LEFT" prefHeight="56">
                    <children>
                        <!-- Logo area matched to side menu width so the logo is centered relative to the menu -->
                        <StackPane prefWidth="160" alignment="CENTER">
                            <children>
                                <!-- Logo on the left -->
                                <ImageView fx:id="logoImage" pickOnBounds="true" preserveRatio="true" fitHeight="60">
                                    <image >
                                        <!-- absolute resource path; file is resources/com/scms/images/seherconi.png -->
                                        <Image url="@/com/scms/images/seherconi.png"  />
                                    </image>
                                </ImageView>
                            </children>
                        </StackPane>

                        <!-- spacer to push right-side items to the far right; the centered title is overlayed by the StackPane -->
                        <Region HBox.hgrow="ALWAYS" />

                        <!-- user info + logout on the right -->
                        <Label fx:id="userInfoLabel" text="Niste prijavljeni" />
                        <Button text="Odjava" onAction="#handleLogout" />
                    </children>
                    <padding>
                        <Insets top="6" right="10" bottom="6" left="10"/>
                    </padding>
                </HBox>

                <!-- Overlayed centered title; stays visually centered regardless of logo width -->
                <Label text="SISTEM ZA UPRAVLJANJE PROIZVODNJOM"
                       style="-fx-font-size: 18px; -fx-font-weight: bold;"
                       StackPane.alignment="CENTER" fx:id="titleLabel" />
            </children>
        </StackPane>
    </top>

    <left>
        <VBox fx:id="sideMenu" id="sideMenu" spacing="8" alignment="TOP_LEFT" prefWidth="160" style="-fx-padding: 10;">
            <children>
                <Button fx:id="btnDashboard" text="Nadzorna ploča" maxWidth="Infinity" onAction="#handleDashboard" styleClass="side-menu-button" />
                <Button fx:id="btnWarehouse" text="Skladište" maxWidth="Infinity" onAction="#handleViewItems" styleClass="side-menu-button" />
                <Button fx:id="btnRequests" text="Zahtjevi" maxWidth="Infinity" onAction="#handleViewRequests" styleClass="side-menu-button" />
                <Button fx:id="btnRecipes" text="Recepti" maxWidth="Infinity" onAction="#handleViewRecipes" styleClass="side-menu-button" />
                <Button fx:id="btnReports" text="Izvještaji" maxWidth="Infinity" onAction="#handleReports" styleClass="side-menu-button" />
                <Button fx:id="btnUsers" text="Korisnici" maxWidth="Infinity" onAction="#handleManageUsers" styleClass="side-menu-button" />
                <Button fx:id="btnStatistics" text="Statistika" maxWidth="Infinity" onAction="#handleStatisticsOverview" styleClass="side-menu-button" />
            </children>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: transparent;">
            <children>
                <Label fx:id="welcomeLabel" text="Dobrodošli u SCMS"/>
            </children>
        </StackPane>
    </center>

</BorderPane>
